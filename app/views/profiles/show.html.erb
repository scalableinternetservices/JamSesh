<div class="container">
  <h1><%= @profile.first_name + ' ' +  @profile.last_name %></h1>

  <p><strong>Age:</strong> <% if @profile.age.blank? %>Not Provided<% else %><%= @profile.age %><% end %></p>
  <!--<p><strong>Phone Number:</strong> <% if @profile.phone.blank? %>Not Provided<% else %><%= @profile.phone %><% end %></p>-->

  <td><strong>Instruments:</strong>
  <table class="show-instruments-table table table-bordered">
    <thead>
      <tr>
        <th>Instrument Type</th>
        <th>Proficiency</th>
        <th>Owned</th>
      </tr>
    </thead>
    <tbody>
      <% if @profile.instrument_profile.each do |i| %>
        <tr>
          <td class="show-instrument">
            <%= i.instrument.name %>
          </td>
          <td class="show-proficiency">
            <%= i.proficiency %>
          </td>
          <td class="show-own-status">
            <%= i.owned ? "Owns this instrument" : "Does not own this instrument" %>
          </td>
        </tr>
      <% end.empty? %>
        <tr><td colspan="3">No instruments</td></tr>
      <% end %>
    </tbody>
  </table>

  <p><strong>Location:</strong> <% if @profile.location.blank? %>Not Provided<% else %><%= @profile.location %><% end %></p>

  <p><strong>Bio:</strong> <% if @profile.bio.blank? %>Not Provided<% else %><%= @profile.bio %><% end %></p>

  <p><strong>Artists:</strong></p>
  <div class="row">
	  <% @profile.artists.each do |a| %>
		  <div class="col-lg-3 col-md-4 col-xs-6 thumb">
			  <a class="thumbnail" href="#">
				  <%= image_tag(a.photo_url, class: "img-responsive") %>
			  </a>
			  <p class="text-center"><%=a.name%></p>
		  </div>
	  <% end %>
  </div>

</div>

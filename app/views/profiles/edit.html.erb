<h1>Edit profile</h1>

<span style="display: none;" id="profile_id"><%= @profile.id %></span>

<%= form_for @profile do |f| %>
  <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>
    <tr>
      <th>
        <%= f.text_field :first_name %>
      </th>
      <th>
        <%= f.text_field :last_name %>
      </th>
    </tr>
  </table>
  <br>

  <table>
    <tr>
      <th>Age</th>
      <th>Phone Number</th>
    </tr>
    <tr>
      <th>
        <%= f.number_field :age, in: 0..120 %>
      </th>
      <th>
        <%= telephone_field(:profile, :phone) %>
      </th>
    </tr>
  </table>
  <br>

  <label>Location</label>
  <br>
  <%= f.text_field :location %>

  <br><br>

  <table class="table" id="instrument-table">
    <thead>
      <tr>
        <th>Instrument</th>
        <th>Proficiency</th>
      </tr>
    </thead>
    <tbody>
      <% @profile.instrument_profile.each do |i| %>
        <tr id="i_id-<%= i.instrument.id %>">
          <td class="table-content instrument">
            <%= i.instrument.name %>
          </td>
          <td class="table-content proficiency">
            <%= i.proficiency %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td>
          <select name="instruments">
            <%= options_from_collection_for_select(Instrument.all, :id, :name) %>
          </select>
        </td>
        <td>
          <select name="proficiency">
            <option value="Newb">Newb</option>
            <option value="Beginner">Beginner</option>
            <option value="Novice">Novice</option>
            <option value="Intermediate">Intermediate</option>
            <option value="Experienced">Experienced</option>
            <option value="Expert">Expert</option>
            <option value="Virtuoso">Virtuoso</option>
          </select>
        </td>
      </tr>
    </tfoot>
  </table>

  <button type="button" id="add_instrument">+ Add instrument</button>
  <br><br>

  <label for="bio">Bio</label><br>
  <%= f.text_area :bio, size: "60x12" %>

  <br>

  <%= f.submit "Update" %>
<% end %>